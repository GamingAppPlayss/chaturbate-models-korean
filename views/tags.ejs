<h1 class="text-3xl font-bold mb-8 text-center">모든 태그</h1>
<div class="bg-white p-8 rounded-lg shadow-sm">
    <div class="tag-cloud flex flex-wrap justify-center gap-2">
        <% tags.forEach(tag => { %>
            <a href="/tag/<%= makeSlug(tag) %>" class="text-sm px-4 py-2 bg-gray-100 rounded-full hover:bg-red-500 hover:text-white transition-colors">
                <%= tag %>
            </a>
        <% }); %>
    </div>
</div>
